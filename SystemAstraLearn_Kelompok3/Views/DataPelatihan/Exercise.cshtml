@{
    ViewData["Title"] = "Pelatih - Pelatihan";
    Layout = "_LayoutSectionPelatih";
}

<div class="pagetitle">
    <h1>Exercise</h1>
    <h4>@(ViewBag.namaSection)</h4>
    <input type="hidden" id="idSection" value="@ViewBag.idSection" />
    <input type="hidden" id="idPelatihan" value="@ViewBag.idPelatihan" />
</div>

<section class="section">
    <div class="container-fluid">
        <button class="btn btn-sm btn-primary mb-3" data-toggle="modal" data-target="#tambah_exercise" style="background-color: #066CBB; color:seashell; border-radius: 7px; font-size: 20px;">
            <i class="fas fa-plus fa-sm"></i> Tambah Exercise
        </button>
        <div class="table-responsive">
            <table class="table table-striped" style="width:100%; border-radius: 15px;" id="dataTable">
                            <thead>
                                    <tr>
                                        <th scope="col">No</th>
                                        <th scope="col">Soal</th>
                                        <th scope="col">Jawaban</th>
                                        <th scope="col">Aksi</th>
                                    </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

    <!--<!-- Modal -->
    <!-- Add Exercise Modal -->
    <div class="modal fade" id="tambah_exercise" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel" style="color: #464646; font-family: 'Poppins', sans-serif; font-weight: bold; font-size: 30px;">Form Tambah Exercise</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="myForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="control-label" for="Soal" style="color: #066CBB; font-family: 'Poppins', sans-serif;">Soal *</label>
                            <textarea id="Soal" name="Soal" class="form-control"></textarea>
                            <span class="text-danger" id="errorSoal"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="Pilgan1" style="color: #066CBB; font-family: 'Poppins', sans-serif;">Pilihan 1 *</label>
                            <input id="Pilgan1" name="Pilgan1" class="form-control" />
                            <span class="text-danger" id="errorPilgan1"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="Pilgan2" style="color: #066CBB; font-family: 'Poppins', sans-serif;">Pilihan 2 *</label>
                            <input id="Pilgan2" name="Pilgan2" class="form-control" />
                            <span class="text-danger" id="errorPilgan2"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="Pilgan3" style="color: #066CBB; font-family: 'Poppins', sans-serif;">Pilihan 3 *</label>
                            <input id="Pilgan3" name="Pilgan3" class="form-control" />
                            <span class="text-danger" id="errorPilgan3"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="Pilgan4" style="color: #066CBB; font-family: 'Poppins', sans-serif;">Pilihan 4 *</label>
                            <input id="Pilgan4" name="Pilgan4" class="form-control" />
                            <span class="text-danger" id="errorPilgan4"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="Pilgan5" style="color: #066CBB; font-family: 'Poppins', sans-serif;">Pilihan 5 *</label>
                            <input id="Pilgan5" name="Pilgan5" class="form-control" />
                            <span class="text-danger" id="errorPilgan5"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="KunciJawaban" style="color: #066CBB; font-family: 'Poppins', sans-serif;">Kunci Jawaban *</label>
                            <select id="KunciJawaban" name="KunciJawaban" class="form-control">
                                <option value="pilgan1">Pilihan 1</option>
                                <option value="pilgan2">Pilihan 2</option>
                                <option value="pilgan3">Pilihan 3</option>
                                <option value="pilgan4">Pilihan 4</option>
                                <option value="pilgan5">Pilihan 5</option>
                            </select>
                            <span class="text-danger" id="errorKunciJawaban"></span>
                        </div>
                        <br>
                        <div class="form-group text-right">
                            <input type="submit" value="Simpan" id="buttonCreate" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Exercise Modal -->
