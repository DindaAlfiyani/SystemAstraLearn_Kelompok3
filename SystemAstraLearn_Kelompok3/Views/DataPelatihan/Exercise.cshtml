</section>

<style>
    .section {
        min-height: 78vh;
        display: flex;
        flex-direction: column;
    }

    .container-fluid {
        flex: 1;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var rootHost = "http://localhost:5114";
        var exerciseId;
        var IdSection = $("#idSection").val();

        new DataTable('#dataTable', {
            ajax: {
                url: rootHost + '/Exercise/GetAllExercises?id=' + IdSection,
                type: "GET",
                dataSrc: function (data) {
                    return data.data;
                }
            },
            columns: [
                { data: null },
                { data: 'soal' },
                { data: 'kunci_jawaban' },
                { data: null },
            ],
            columnDefs: [
                {
                    targets: 0,
                    render: function (data, type, row, index) {
                        return index.row + 1;
                    }
                },
                {
                    targets: 3,
                    render: function (data, type, row, index) {
                        const deleteButton = '<button class="btn btn-sm btn-danger delete-button" style="background-color:#BB0000; border-radius: 5px;"><i class="bi bi-trash"></i></button>';
                        const editButton = '<button class="btn btn-primary btn-sm edit-button" data-toggle="modal" data-target="#edit_exercise" data-id="' + row.id_pelatihan + '" style="background-color: #066CBB; border-radius: 5px;"><i class="bi bi-exclamation-triangle"></i></button>';
                        const editButton2 = '<button class="btn btn-primary btn-sm edit-button2" data-toggle="modal" data-target="#detail_exercise" data-id="' + row.id_pelatihan + '"><i class="bi bi-info-circle"></i></button>';
                        return editButton + " " + deleteButton + " " + editButton2;
                    }
                }
            ],
            createdRow: function (row, data, dataIndex) {
                $(row).attr('data-id', data.id_exercise);
                $(row).attr('data-type', 'pelatihan');
            }
        });

        function tambahExercise() {
            var soal = $("#Soal").val();
            var pilgan1 = $("#Pilgan1").val();
            var pilgan2 = $("#Pilgan2").val();
            var pilgan3 = $("#Pilgan3").val();
            var pilgan4 = $("#Pilgan4").val();
            var pilgan5 = $("#Pilgan5").val();
            var kunciJawaban;

            if ($("#KunciJawaban").val() === "pilgan1") {
                kunciJawaban = pilgan1;
            } else if ($("#KunciJawaban").val() === "pilgan2") {
                kunciJawaban = pilgan2;
            } else if ($("#KunciJawaban").val() === "pilgan3") {
                kunciJawaban = pilgan3;
            } else if ($("#KunciJawaban").val() === "pilgan4") {
                kunciJawaban = pilgan4;
            } else if ($("#KunciJawaban").val() === "pilgan5") {
                kunciJawaban = pilgan5;
            } else {
                $("#errorKunciJawaban").text("Pilih kunci jawaban.");
                return;
            }

            if (!soal.trim()) {
                $("#errorSoal").text("Soal tidak boleh kosong.");
                return;
            } else {
                $("#errorSoal").text("");
            }

            if (!pilgan1.trim()) {
                $("#errorPilgan1").text("Pilihan 1 tidak boleh kosong.");
                return;
            } else {
                $("#errorPilgan1").text("");
            }

            if (!pilgan2.trim()) {
                $("#errorPilgan2").text("Pilihan 2 tidak boleh kosong.");
                return;
            } else {
                $("#errorPilgan2").text("");
            }

            if (!pilgan3.trim()) {
                $("#errorPilgan3").text("Pilihan 3 tidak boleh kosong.");
                return;
            } else {
                $("#errorPilgan3").text("");
            }

            if (!pilgan4.trim()) {
                $("#errorPilgan4").text("Pilihan 4 tidak boleh kosong.");
                return;
            } else {
                $("#errorPilgan4").text("");
            }

            if (!pilgan5.trim()) {
                $("#errorPilgan5").text("Pilihan 5 tidak boleh kosong.");
                return;
            } else {
                $("#errorPilgan5").text("");
            }

            if (!kunciJawaban.trim()) {
                $("#errorKunciJawaban").text("Kunci Jawaban harus dipilih.");
                return;
            } else {
                $("#errorKunciJawaban").text("");
            }

            var data = {
                id_exercise: 0,
                id_section: IdSection,
                soal: soal,
                pilgan1: pilgan1,
                pilgan2: pilgan2,
                pilgan3: pilgan3,
                pilgan4: pilgan4,
                pilgan5: pilgan5,
                kunci_jawaban: kunciJawaban
            };
            console.log(data);
            $.ajax({
                url: rootHost + '/Exercise/InsertExercise',
                method: "post",
                data: JSON.stringify(data),
                contentType: "application/json",
                success: function (data) {
                    notifikasiTambahSukses();
                },
                error: function () {
                }
            });
        }


        $("#myForm").submit(function (e) {
            e.preventDefault();
            tambahExercise();
        });


        $(document).on("click", ".delete-button", function () {
            exerciseId = $(this).closest('tr').data("id");

            Swal.fire({
                title: "Hapus Exercise?",
                text: "Apakah anda ingin menghapus exercise ini?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Ya",
                cancelButtonText: "Tidak"
            }).then((result) => {
                if (result.isConfirmed) {
                    hapusExercise();
                }
            });
        });

        function hapusExercise() {
            $.ajax({
                url: rootHost + '/Exercise/DeleteExercise?id=' + exerciseId,
                type: "POST",
                success: function (data) {
                    notifikasiHapusSukses();
                },
                error: function () {
                    Swal.fire("Error!", "Terjadi kesalahan.", "error");
                }
            });
        }

        $('#dataTable').on('click', 'button.edit-button', function () {
            exerciseId = $(this).closest('tr').data("id");

            $.ajax({
                url: rootHost + '/Exercise/GetExercise?id=' + exerciseId,
                type: 'GET',
                success: function (response) {
                    if (response && response.data) {
                        var data = response.data;

                        // Set the values in the edit modal based on the retrieved data
                        $('#EditSoal').val(data.soal);
                        $('#EditPilgan1').val(data.pilgan1);
                        $('#EditPilgan2').val(data.pilgan2);
                        $('#EditPilgan3').val(data.pilgan3);
                        $('#EditPilgan4').val(data.pilgan4);
                        $('#EditPilgan5').val(data.pilgan5);

                        // Populate the dropdown with values from data.pilgan1 to data.pilgan5
                        var dropdown = $('#EditKunciJawaban');
                        dropdown.empty();
                        for (var i = 1; i <= 5; i++) {
                            var option = $('<option>', {
                                value: data['pilgan' + i],
                                text: 'Pilihan ' + i
                            });

                            // Set the selected attribute for the matching option
                            if (data['pilgan' + i] === data.kunci_jawaban) {
                                option.attr('selected', 'selected');
                            }

                            dropdown.append(option);
                        }

                        // Show the edit modal
                        $('#edit_exercise').modal('show');
                    } else {
                        console.error("Invalid response format:", response);
                        Swal.fire('Error!', 'Terjadi kesalahan dalam format respons.', 'error');
                    }
                },
                error: function () {
                    Swal.fire('Error!', 'Terjadi kesalahan.', 'error');
                }
            });
        });

        $('#dataTable').on('click', 'button.edit-button2', function () {
            exerciseId = $(this).closest('tr').data("id");

            $.ajax({
                url: rootHost + '/Exercise/GetExercise?id=' + exerciseId,
                type: 'GET',
                success: function (response) {
                    if (response && response.data) {
                        var data = response.data;

                        // Set the values in the edit modal based on the retrieved data
                        $('#InfoSoal').val(data.soal);
                        $('#InfoPilgan1').val(data.pilgan1);
                        $('#InfoPilgan2').val(data.pilgan2);
                        $('#InfoPilgan3').val(data.pilgan3);
                        $('#InfoPilgan4').val(data.pilgan4);
                        $('#InfoPilgan5').val(data.pilgan5);

                        // Populate the dropdown with values from data.pilgan1 to data.pilgan5
                        var dropdown = $('#InfoKunciJawaban');
                        dropdown.empty();
                        for (var i = 1; i <= 5; i++) {
                            var option = $('<option>', {
                                value: data['pilgan' + i],
                                text: 'Pilihan ' + i
                            });

                            // Set the selected attribute for the matching option
                            if (data['pilgan' + i] === data.kunci_jawaban) {
                                option.attr('selected', 'selected');
                            }

                            dropdown.append(option);
                        }

                        // Show the edit modal
                        $('#info_exercise').modal('show');
                    } else {
                        console.error("Invalid response format:", response);
                        Swal.fire('Error!', 'Terjadi kesalahan dalam format respons.', 'error');
                    }
                },
                error: function () {
                    Swal.fire('Error!', 'Terjadi kesalahan.', 'error');
                }
            });
        });

        function ubahExercise() {
            var soal = $("#EditSoal").val();
            var pilgan1 = $("#EditPilgan1").val();
            var pilgan2 = $("#EditPilgan2").val();
            var pilgan3 = $("#EditPilgan3").val();
            var pilgan4 = $("#EditPilgan4").val();
            var pilgan5 = $("#EditPilgan5").val();
            var kunciJawaban = $("#EditKunciJawaban").val();

            if (!soal.trim()) {
                $("#errorEditSoal").text("Soal tidak boleh kosong.");
                return;
            } else {
                $("#errorEditSoal").text("");
            }

            if (!pilgan1.trim()) {
                $("#errorEditPilgan1").text("Pilihan 1 tidak boleh kosong.");
                return;
            } else {
                $("#errorEditPilgan1").text("");
            }

            if (!pilgan2.trim()) {
                $("#errorEditPilgan2").text("Pilihan 2 tidak boleh kosong.");
                return;
            } else {
                $("#errorEditPilgan2").text("");
            }

            if (!pilgan3.trim()) {
                $("#errorEditPilgan3").text("Pilihan 3 tidak boleh kosong.");
                return;
            } else {
                $("#errorEditPilgan3").text("");
            }

            if (!pilgan4.trim()) {
                $("#errorEditPilgan4").text("Pilihan 4 tidak boleh kosong.");
                return;
            } else {
                $("#errorEditPilgan4").text("");
            }

            if (!pilgan5.trim()) {
                $("#errorEditPilgan5").text("Pilihan 5 tidak boleh kosong.");
                return;
            } else {
                $("#errorEditPilgan5").text("");
            }

            if (!kunciJawaban.trim()) {
                $("#errorEditKunciJawaban").text("Kunci Jawaban harus dipilih.");
                return;
            } else {
                $("#errorEditKunciJawaban").text("");
            }

            var data = {
                id_exercise: exerciseId,
                id_section: IdSection,
                soal: soal,
                pilgan1: pilgan1,
                pilgan2: pilgan2,
                pilgan3: pilgan3,
                pilgan4: pilgan4,
                pilgan5: pilgan5,
                kunci_jawaban: kunciJawaban
            };

            $.ajax({
                url: rootHost + '/Exercise/UpdateExercise',
                method: "post",
                data: JSON.stringify(data),
                contentType: "application/json",
                success: function (data) {
                    notifikasiUpdateSukses();
                },
                error: function () {

                }
            });
        }

        $("#editForm").submit(function (e) {
            e.preventDefault();
            ubahExercise();
        });

        function notifikasiTambahSukses() {
            Swal.fire({
                title: "Sukses!",
                text: "Data Exercise berhasil ditambahkan.",
                icon: "success",
                confirmButtonColor: "#3085d6",
                confirmButtonText: "OK"
            }).then(() => {
                location.reload();
            });
        }

        function notifikasiUpdateSukses() {
            Swal.fire({
                title: "Sukses!",
                text: "Data Exercise Pelatihan berhasil diubah.",
                icon: "success",
                confirmButtonColor: "#3085d6",
                confirmButtonText: "OK"
            }).then(() => {
                location.reload();
            });
        }

        function notifikasiHapusSukses() {
            Swal.fire({
                title: "Sukses!",
                text: "Data Exercise Pelatihan berhasil dihapus.",
                icon: "success",
                confirmButtonColor: "#3085d6",
                confirmButtonText: "OK"
            }).then(() => {
                location.reload();
            });
        }

        $('#edit_exercise .close').on('click', function () {
            $('#edit_exercise').modal('hide');
