                        <input id="InfoPilgan2" name="InfoPilgan2" class="form-control" readonly />
                        <span class="text-danger" id="errorInfoPilgan2"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="InfoPilgan3" style="color: #066CBB; font-family: 'Poppins', sans-serif;">Pilihan 3 *</label>
                        <input id="InfoPilgan3" name="InfoPilgan3" class="form-control" readonly />
                        <span class="text-danger" id="errorInfoPilgan3"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="InfoPilgan4" style="color: #066CBB; font-family: 'Poppins', sans-serif;">Pilihan 4 *</label>
                        <input id="InfoPilgan4" name="InfoPilgan4" class="form-control" readonly />
                        <span class="text-danger" id="errorInfoPilgan4"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="InfoPilgan5" style="color: #066CBB; font-family: 'Poppins', sans-serif;">Pilihan 5 */label>
                        <input id="InfoPilgan5" name="InfoPilgan5" class="form-control" readonly />
                        <span class="text-danger" id="errorInfoPilgan5"></span>
