@{
    ViewData["Title"] = "Admin - Pelatihan";
    Layout = "_Layout";
}

<div class="pagetitle">
    <h1>Pelatihan</h1>
</div><!-- End Page Title -->

<section class="section">
    <div class="container-fluid">
        <!-- Table with stripped rows -->
        <div class="table-responsive">
            <table class="table table-striped" style="width:100%" id="dataTable">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Nama Pelatih</th>
                        <th scope="col">Nama Klasifikasi</th>
                        <th scope="col">Deskripsi</th>
                        <th scope="col">Jumlah Peserta</th>
                        <th scope="col">Jumlah Peserta Selesai</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</section>

<style>
    .section {
        min-height: 78vh;
        display: flex;
        flex-direction: column;
    }

    .container-fluid {
        flex: 1;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var rootHost = "http://localhost:5114";
        var klasifikasiId;

        new DataTable('#dataTable', {
            ajax: {
                url: rootHost + '/ViewPelatihan/GetAllPelatihans',
                type: "GET",
                dataSrc: function (data) {
                    console.log(data.data)
                    return data.data;
                }
            },
            columns: [
                { data: null },
                { data: 'nama_pengguna' },
                { data: 'nama_klasifikasi' },
                { data: 'deskripsi_pelatihan' },
                { data: 'jumlah_peserta' },
                { data: 'jumlah_peserta_selesai' },
            ],
            columnDefs: [
                {
                    targets: 0,
                    render: function (data, type, row, index) {
                        return index.row + 1;
                    }
                }
            ],
            createdRow: function (row, data, dataIndex) {
                $(row).attr('data-id', data.id_klasifikasi);
                $(row).attr('data-type', 'klasifikasi');
            }
        });
    });
</script>
