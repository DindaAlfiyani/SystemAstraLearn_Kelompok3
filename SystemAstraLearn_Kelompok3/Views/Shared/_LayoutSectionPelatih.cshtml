<script>
    document.addEventListener('DOMContentLoaded', function () {
        var rootHost = "http://localhost:5180";
        var rootWebHost = "https://localhost:7157/SectionView/";
        var rootWebHost2 = "https://localhost:7157/DataPelatihan/Index"
        var IdPelatihan = $("#idPelatihan").val();

        function loadSideBar() {
            $.ajax({
                url: rootHost + '/Section/GetAllSectionsById?id=' + IdPelatihan,
                method: 'get',
                contentType: 'application/json',
                success: function (response) {
                    if (response.status === 200) {
                        updateSidebar(response.data);
                    } else {
                        console.error("Failed to load sections data.");
                    }
                },
                error: function () {
                    console.error("Failed to load sections data.");
                }
            });
        }

        function updateSidebar(sections) {
            var sidebarNav = $("#sidebar1-nav");

            sections.forEach(function (section, index) {
                var listItem = $("<li>").addClass("nav-item");
                var link = $("<a>")
                    .addClass("nav-link collapsed")
                    .attr("href", "#")  // Set a placeholder href for now
                    .html("<h5 class='ms-2 mb-0'><span class='rounded-corner'>" + (index + 1) + ". " + section.nama_section + "</span></h5>")
                    .click(function () {
                        updateHref(section.id_section, section.id_pelatihan);
                    });

                listItem.append(link);
                sidebarNav.append(listItem);
            });

            // Add a "Back" button
            var backListItem = $("<li>").addClass("nav-item");
            var backButton = $("<a>")
                .addClass("nav-link collapsed")
                .attr("href", "#")  // Set a placeholder href for now
                .html("<h5 class='ms-2 mb-0'><span>Kembali</span></h5>")
                .click(function () {
                    // Handle the back button click event
                    goBack();
                })
                .css({
                    "background-color": "#006CBB",  // Set the background color to blue
                    "color": "white",
                    "border-radius": "10px"
                });

            backListItem.append(backButton);
            sidebarNav.append(backListItem);
        }


    function goBack() {
        window.location.href = rootWebHost2;
    }

    function updateHref(id, id1) {
        var newHref = rootWebHost + id + "/" + id1;
        window.location.href = newHref;
    }

        loadSideBar();
    });
</script>

