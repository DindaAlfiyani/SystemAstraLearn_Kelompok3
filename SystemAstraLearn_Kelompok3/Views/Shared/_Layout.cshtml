    <script>
        // Fungsi untuk menampilkan notifikasi SweetAlert
        function showLogoutConfirmation() {
            Swal.fire({
                title: 'Apakah Anda yakin ingin keluar?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'Ya',
                cancelButtonText: 'Tidak',
            }).then((result) => {
                // Jika user mengklik "Ya", redirect ke Home/Index
                if (result.isConfirmed) {
                    window.location.href = '/Home/Index';
                }
            });
        }

        // Menambahkan event handler untuk klik pada link Logout
        document.getElementById('logoutLink').addEventListener('click', function (event) {
            // Mencegah aksi default (navigasi langsung)
            event.preventDefault();

            // Memanggil fungsi notifikasi sebelum logout
            showLogoutConfirmation();
        });
